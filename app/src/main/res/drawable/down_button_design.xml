<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#46d249"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_expand_more_white_48dp" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#46d249"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_expand_more_white_48dp" android:gravity="center"/>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#64000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>