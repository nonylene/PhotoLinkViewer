<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingEnd="@dimen/activity_horizontal_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingStart="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:layout_margin="@dimen/button_frame_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/shadow_size"
                    android:layout_height="@dimen/shadow_size"
                    android:src="@drawable/shadow"/>

                <ImageButton
                    android:id="@+id/webbutton"
                    android:layout_width="@dimen/layer_button_size"
                    android:layout_height="@dimen/layer_button_size"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="@string/option_fragment_open"
                    android:scaleType="fitXY"
                    android:src="@drawable/browser_button_design"/>

            </FrameLayout>

            <FrameLayout
                android:layout_margin="@dimen/button_frame_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/shadow_size"
                    android:layout_height="@dimen/shadow_size"
                    android:src="@drawable/shadow"/>

                <ImageButton
                    android:id="@+id/setbutton"
                    android:layout_width="@dimen/layer_button_size"
                    android:layout_height="@dimen/layer_button_size"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="@string/option_fragment_settings"
                    android:scaleType="fitXY"
                    android:src="@drawable/setting_button_design"/>

            </FrameLayout>

            <FrameLayout
                android:layout_margin="@dimen/button_frame_margin"
                android:id="@+id/dlbutton_frame"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/shadow_size"
                    android:layout_height="@dimen/shadow_size"
                    android:src="@drawable/shadow"/>

                <ImageButton
                    android:id="@+id/dlbutton"
                    android:layout_width="@dimen/layer_button_size"
                    android:layout_height="@dimen/layer_button_size"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="@string/option_fragment_download"
                    android:scaleType="fitXY"
                    android:src="@drawable/download_button_design"/>

            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="@dimen/button_frame_margin"
            android:layout_marginLeft="@dimen/button_frame_margin"
            android:layout_marginRight="@dimen/button_frame_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/shadow_size"
                android:layout_height="@dimen/shadow_size"
                android:src="@drawable/shadow"/>

            <ImageButton
                android:id="@+id/basebutton"
                android:layout_width="@dimen/layer_button_size"
                android:layout_height="@dimen/layer_button_size"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/option_fragment_open"
                android:scaleType="fitXY"
                android:src="@drawable/up_button_design"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rotate_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:layout_margin="@dimen/button_frame_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/shadow_size"
                android:layout_height="@dimen/shadow_size"
                android:src="@drawable/shadow"/>

            <ImageButton
                android:id="@+id/rotate_leftbutton"
                android:layout_width="@dimen/layer_button_size"
                android:layout_height="@dimen/layer_button_size"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/rotate_left"
                android:scaleType="fitXY"
                android:src="@drawable/rotate_left_design"/>

        </FrameLayout>

        <FrameLayout
            android:layout_margin="@dimen/button_frame_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/shadow_size"
                android:layout_height="@dimen/shadow_size"
                android:src="@drawable/shadow"/>

            <ImageButton
                android:id="@+id/rotate_rightbutton"
                android:layout_width="@dimen/layer_button_size"
                android:layout_height="@dimen/layer_button_size"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/rotate_right"
                android:scaleType="fitXY"
                android:src="@drawable/rotate_right_design"/>

        </FrameLayout>
    </LinearLayout>

</FrameLayout>
