<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingEnd="@dimen/activity_horizontal_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingStart="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:orientation="vertical">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/webbutton"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/option_fragment_open"
            android:src="@drawable/ic_open_in_browser_white_36dp"
            android:visibility="gone"
            app:backgroundTint="#24a8ed"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/setbutton"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/option_fragment_settings"
            android:src="@drawable/ic_settings_white_24dp"
            android:visibility="gone"
            app:backgroundTint="#24a8ed"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/dlbutton"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/option_fragment_download"
            android:src="@drawable/ic_file_download_white_48dp"
            android:visibility="gone"
            app:backgroundTint="#24a8ed"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/retweet_button"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/retweet_button_description"
            android:src="@drawable/retweet_white"
            android:visibility="gone"
            app:backgroundTint="#f4554f"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/like_button"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/like_button_description"
            android:src="@drawable/ic_favorite_white_24dp"
            android:visibility="gone"
            app:backgroundTint="#f4554f"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/basebutton"
            style="@style/FloatingActionButton"
            android:contentDescription="@string/option_fragment_openclose"
            android:src="@drawable/ic_expand_less_white_24dp"
            app:backgroundTint="#46d249"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rotate_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_frame_margin">

            <ImageView
                android:layout_width="@dimen/shadow_size"
                android:layout_height="@dimen/shadow_size"
                android:src="@drawable/shadow"/>

            <ImageButton
                android:id="@+id/rotate_leftbutton"
                android:layout_width="@dimen/layer_button_size"
                android:layout_height="@dimen/layer_button_size"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/rotate_left"
                android:scaleType="fitXY"
                android:src="@drawable/rotate_left_design"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_frame_margin">

            <ImageView
                android:layout_width="@dimen/shadow_size"
                android:layout_height="@dimen/shadow_size"
                android:src="@drawable/shadow"/>

            <ImageButton
                android:id="@+id/rotate_rightbutton"
                android:layout_width="@dimen/layer_button_size"
                android:layout_height="@dimen/layer_button_size"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/rotate_right"
                android:scaleType="fitXY"
                android:src="@drawable/rotate_right_design"/>

        </FrameLayout>
    </LinearLayout>

</FrameLayout>
