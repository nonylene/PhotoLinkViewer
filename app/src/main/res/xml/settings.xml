<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:summary="@string/pref_twitter_summary"
        android:title="@string/pref_twitter_title">
        <intent
            android:action="android.intent.action.view"
            android:targetClass="net.nonylene.photolinkviewer.TOAuth"
            android:targetPackage="net.nonylene.photolinkviewer"/>
    </Preference>

    <Preference
        android:key="update_check"
        android:summary="@string/setting_update_summary"
        android:title="@string/setting_update_check"/>

    <EditTextPreference
        android:key="zoom_speed"
        android:summary="@string/settings_zoom_summary"
        android:dialogTitle="@string/settings_zoom_dtitle"
        android:inputType="numberDecimal"
        android:title="@string/settings_zoom_title" />

    <CheckBoxPreference
        android:key="flickr_original"
        android:summary="@string/settings_flickr_summary"
        android:title="@string/settings_flickr_title" />

</PreferenceScreen>
