<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.nonylene.photolinkviewer"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:name=".PLVApplication"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity
            android:name=".Show"
            android:theme="@style/Theme.Transparent">
            <intent-filter
                android:label="PhotoLinkViewer - twipple">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="p.twipple.jp"
                    android:scheme="http"/>
            </intent-filter>

            <intent-filter
                android:label="PhotoLinkViewer - imgly">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="img.ly"
                    android:scheme="http"/>
            </intent-filter>
            <intent-filter
                android:label="PhotoLinkViewer - imgur">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="imgur.com"
                    android:scheme="http"/>
                <data
                    android:host="imgur.com"
                    android:scheme="https"/>
                <data
                    android:host="m.imgur.com"
                    android:scheme="http"/>
                <data
                    android:host="m.imgur.com"
                    android:scheme="https"/>
                <data
                    android:host="www.imgur.com"
                    android:scheme="http"/>
                <data
                    android:host="www.imgur.com"
                    android:scheme="https"/>
            </intent-filter>

            <intent-filter
                android:label="PhotoLinkViewer - Gyazo">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="gyazo.com"
                    android:scheme="http"/>
                <data
                    android:host="gyazo.com"
                    android:scheme="https"/>
            </intent-filter>

            <intent-filter
                android:label="PhotoLinkViewer - flickr">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="m.flickr.com"
                    android:scheme="http"/>
                <data
                    android:host="m.flickr.com"
                    android:scheme="https"/>
            </intent-filter>

            <!-- separating because of unavailable of intent -->
            <intent-filter
                android:label="PhotoLinkViewer - flickr">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="www.flickr.com"
                    android:pathPattern="/photos/.*/..*"
                    android:scheme="http"/>
                <data
                    android:host="www.flickr.com"
                    android:pathPattern="/photos/.*/..*"
                    android:scheme="https"/>
                <data
                    android:host="flic.kr"
                    android:pathPattern="/p/..*"
                    android:scheme="http"/>
                <data
                    android:host="flic.kr"
                    android:pathPattern="/p/..*"
                    android:scheme="https"/>
            </intent-filter>

            <intent-filter
                android:label="PhotoLinkViewer - tumblr">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="*.tumblr.com"
                    android:pathPattern="/post/..*"
                    android:scheme="http"/>
            </intent-filter>

            <!-- separating because of unavailable of intent -->
            <intent-filter
                android:label="PhotoLinkViewer - tumblr">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="tmblr.co"
                    android:scheme="http"/>
            </intent-filter>

            <intent-filter
                android:label="PhotoLinkViewer - instagram">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="instagram.com"
                    android:pathPattern="/p/..*"
                    android:scheme="http"/>
                <data
                    android:host="instagr.am"
                    android:pathPattern="/p/..*"
                    android:scheme="http"/>
                <data
                    android:host="instagram.com"
                    android:pathPattern="/p/..*"
                    android:scheme="https"/>
                <data
                    android:host="instagr.am"
                    android:pathPattern="/p/..*"
                    android:scheme="https"/>
            </intent-filter>

            <intent-filter
                android:label="PhotoLinkViewer - nicoseiga">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="seiga.nicovideo.jp"
                    android:pathPattern="/seiga/im.*"
                    android:scheme="http"/>
                <data
                    android:host="seiga.nicovideo.jp"
                    android:pathPattern="/seiga/im.*"
                    android:scheme="https"/>
                <data
                    android:host="nico.ms"
                    android:pathPattern="/im.*"
                    android:scheme="http"/>
                <data
                    android:host="nico.ms"
                    android:pathPattern="/im.*"
                    android:scheme="https"/>
            </intent-filter>

            <!-- separating because of unavailable of intent -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="*"
                    android:pathPattern=".*\\.png"
                    android:scheme="http"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.png"
                    android:scheme="https"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpg"
                    android:scheme="http"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpg"
                    android:scheme="https"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpeg"
                    android:scheme="http"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpeg"
                    android:scheme="https"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.gif"
                    android:scheme="http"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.gif"
                    android:scheme="https"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".TOAuth"
            android:launchMode="singleTask"
            android:parentActivityName=".Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings"/>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="plvtwitter"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".IOAuthActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings"/>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="@string/instagram_callback_scheme"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".TwitterDisplay"
            android:theme="@style/Theme.Transparent">
            <intent-filter
                android:label="PhotoLinkViewer - twitter">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="twitter.com"
                    android:pathPattern="/.*/status.*/..*"
                    android:scheme="http"/>
                <data
                    android:host="twitter.com"
                    android:pathPattern="/.*/status.*/..*"
                    android:scheme="https"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ChangeQualityActivity"
            android:parentActivityName=".Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings"/>
        </activity>

    </application>

</manifest>
