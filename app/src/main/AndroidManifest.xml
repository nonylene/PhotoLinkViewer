<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.nonylene.photolinkviewer"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".Show"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="www.flickr.com"
                    android:scheme="http"/>
                <data
                    android:host="www.flickr.com"
                    android:scheme="https"/>
                <data
                    android:host="m.flickr.com"
                    android:scheme="http"/>
                <data
                    android:host="m.flickr.com"
                    android:scheme="https"/>
                <data
                    android:host="flic.kr"
                    android:scheme="http"/>
                <data
                    android:host="flic.kr"
                    android:scheme="https"/>
                <data
                    android:host="p.twipple.jp"
                    android:scheme="http"/>
                <data
                    android:host="img.ly"
                    android:scheme="http"/>
                <data
                    android:host="instagram.com"
                    android:scheme="http"/>
                <data
                    android:host="instagr.am"
                    android:scheme="http"/>
                <data
                    android:host="gyazo.com"
                    android:scheme="http"/>
                <data
                    android:host="gyazo.com"
                    android:scheme="http"/>
                <data
                    android:host="imgur.com"
                    android:scheme="http"/>
                <data
                    android:host="m.imgur.com"
                    android:scheme="http"/>
                <data
                    android:host="www.imgur.com"
                    android:scheme="http"/>
            </intent-filter>

            <!--separating because of unavailable of intent-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="twitter.com"
                    android:pathPattern=".*status.*photo.*"
                    android:scheme="http"/>
                <data
                    android:host="twitter.com"
                    android:pathPattern=".*status.*photo.*"
                    android:scheme="https"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.png"
                    android:scheme="http"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.png"
                    android:scheme="https"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpg"
                    android:scheme="http"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.jpg"
                    android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/Theme.Transparent">
        <activity
            android:name=".Settings"
            android:theme="@android:style/Theme.DeviceDefault.Light">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TOAuth"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.DeviceDefault.Light">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="plviewer"/>
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
